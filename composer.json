{
    "name": "junaidkhan/php-string-helper",
    "description": "A PHP helper library offering utilities like truncate, slugify, casing conversions, and more.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JunaidKhan\\StringHelper\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Junaid Khan",
            "email": "mrjunaid444@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --do-not-cache-result"
    },
    "keywords": [
        "php",
        "string",
        "string helper",
        "string utilities",
        "string manipulation",
        "text processing",
        "formatter",
        "truncate",
        "limit words",
        "slugify",
        "slug",
        "camelCase",
        "snake_case",
        "kebab-case",
        "json",
        "reverse",
        "helpers",
        "library"
    ]
}
